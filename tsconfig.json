{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020"],
        "module": "ESNext",
        "alwaysStrict": true,
        "strict": true,
        "allowJs": false,
        "skipLibCheck": true,
        "baseUrl": "src",
        "paths": {
            "domain/*": ["./domain/*"],
            "application/*": ["./application/*"]
        },
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
    },
    "include": ["src"]
}
