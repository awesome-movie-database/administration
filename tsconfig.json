{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020"],
        "module": "ESNext",
        "alwaysStrict": true,
        "strict": true,
        "allowJs": false,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {"*": ["*"]},
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "preserveSymlinks": true,
    },
    "tsc-alias": {
        "verbose": false,
        "resolveFullPaths": true,
        "fileExtensions": {
            "inputGlob": "{js,jsx,mjs}",
            "outputCheck": ["js", "json", "jsx", "mjs"]
        }
    },
    "include": ["src"]
}
